<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>jspservlet.servlet.RegisterServlet</servlet-class>


    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/homepage.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>jspservlet.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/product</url-pattern>
        <url-pattern>/logedinproduct</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductDetailsServlet</servlet-name>
        <servlet-class>jspservlet.servlet.ProductDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetailsServlet</servlet-name>
        <url-pattern>/productdetail</url-pattern>
        <url-pattern>/loginproductdetail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>jspservlet.servlet.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BuyServlet</servlet-name>
        <servlet-class>jspservlet.servlet.BuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyServlet</servlet-name>
        <url-pattern>/purchasesuccess</url-pattern>
    </servlet-mapping>
</web-app>